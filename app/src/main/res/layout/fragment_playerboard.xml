            android:id="@+id/yellow_total_card"
            style="@style/CardBorderStyle"
            android:layout_row="10"
            android:layout_column="0">
            <TextView
                android:id="@+id/yellow_total"
                style="@style/CardTextViewStyle"
                android:text="@string/label_zero"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/white_total_card"
            style="@style/CardBorderStyle"
            android:layout_row="10"
            android:layout_column="1">
