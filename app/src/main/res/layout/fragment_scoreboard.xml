<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scoreboard.ScoreboardFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Player 1 Score -->
        <TextView
            android:id="@+id/player1ScoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 1 Score:"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Player 1 Score: 100" />

        <!-- Player 2 Score -->
        <TextView
            android:id="@+id/player2ScoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 2 Score:"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Player 2 Score: 120" />

        <!-- Add any other UI elements or customization as needed -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>