<!-- res/values/styles.xml -->
<resources>
    <style name="CardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="strokeColor">@color/medium_dark_grey</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardImageButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_wager</item>
    </style>

    <style name="CardBorderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">0.65</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="strokeColor">@color/medium_grey</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <style name="CardTextViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardEightBonusTextViewStyle">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/circular_background</item>
        <item name="android:text">@string/eight_card_bonus_label</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="StandardButtonStyle">
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ResetButtonStyle" parent="StandardButtonStyle">
        <item name="android:backgroundTint">@color/color_secondary_variant</item>
    </style>

    <style name="ScoreHeaderStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>
    <style name="ScoreHeaderCurrentStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>
    <style name="ScoreFooterStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_primary_variant</item>
    </style>

    <style name="FullscreenDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>
