<!-- res/values/styles.xml -->
<resources>
    <style name="CardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="strokeColor">@color/medium_grey</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardImageButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_wager</item>
    </style>

    <style name="CardBorderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">0.5</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="strokeColor">@color/medium_grey</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <style name="CardTextViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ResetButtonStyle">
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/medium_dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>
